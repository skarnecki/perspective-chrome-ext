{
  "manifest_version": 2,
  "name": "Perspective.io",
  "description": "Info pump for perspective.io",
  "version": "1.0",
  "background": {
     "scripts": ["background.js", "jquery-1.11.2.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "poker7.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "https://perspectivve.herokuapp.com/",
    "http://perspectivve.herokuapp.com/",
    "http://localhost/",
    "storage",
    "http://*/",
    "https://*/"
  ]
}